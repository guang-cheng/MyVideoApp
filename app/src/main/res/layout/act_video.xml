<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
<RelativeLayout
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
    <RelativeLayout
        android:id="@+id/video_layout"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@android:color/black"
        android:orientation="vertical">


        <com.qxshikong.myvideoapp.view.CustomVideoView
            android:id="@+id/videoView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fitsSystemWindows="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_gridview" />

        <ImageView
            android:id="@+id/play_full"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:padding="7dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_video_full"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:scaleType="fitXY"
            />


        <ImageView
            android:id="@+id/play_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="7dp"
            android:src="@drawable/ic_video_back"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_gravity="right"
            />

        <ImageView
            android:id="@+id/iv_video_play"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/bg_video_paly"
            android:padding="7dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
       <!-- <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:layout_centerInParent="true"
            android:max="100"
            android:visibility="visible"
            android:indeterminate="false" />
-->

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/video_layout"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ff333333"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/layout_collection"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_collection"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:src="@drawable/ic_video_collection"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:text="Collection"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/layout_collection"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ic_share"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_video_share"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="12dp"
                    android:text="Share"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:clickable="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_menu_home"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp"
                    android:text="Home"
                    />
            </LinearLayout>
        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <LinearLayout

        android:layout_below="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_frg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:text="我是一只小小鸟!!!!"
            />

        <com.qxshikong.myvideoapp.view.FlowLayout
            android:id="@+id/flowLayout"
            xmlns:f="http://schemas.android.com/apk/res/com.qxshikong.myvideoapp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            f:orientation="horizontal"
            f:horizontalSpacing="10.0dip"
            f:verticalSpacing="10.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            />

        <com.qxshikong.myvideoapp.view.MyGridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_frg"
            android:layout_marginTop="14dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:numColumns="2"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:listSelector="@android:color/transparent"
            android:divider="@null"
            />
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
</RelativeLayout>
    </RelativeLayout>
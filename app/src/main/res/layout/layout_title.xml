<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TitlebarBase"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/title_leftLayout"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
         >

         <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerInside"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_centerLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center" >

        <TextView
            android:id="@+id/title_layout_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/font_color_tv"
            android:textSize="19sp"
            android:text="标题"
             />

        <!-- <ImageView
            android:layout_width="23.0dip"
            android:layout_height="23.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/ic_launcher"
            android:visibility="gone"
             /> -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_rightLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_title_right_btn"
        android:gravity="center"
        android:minWidth="50dp"
        android:clickable="true"
        android:layout_marginRight="10dp"
        android:visibility="invisible" >

        <ImageView
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:background="@color/white"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/ic_launcher" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff673bb7"

            android:text="Clear"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
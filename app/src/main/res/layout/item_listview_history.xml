<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_item_backgroud"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="10.0dip" >

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="105.0dip"
            android:layout_height="65.0dip"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_default"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@+id/iv_item"
            android:lines="2"
            android:ellipsize="end"
            android:text="上海沪昆高速一槽罐车侧翻 部分化学品泄漏(图)"
            android:textColor="#ff333333"
            android:textSize="13.0sp" />

        <View
            android:id="@+id/vieww"
            android:layout_width="10.0dip"
            android:layout_height="10.0dip"
            android:layout_below="@+id/tv_topic"
            android:layout_toRightOf="@+id/iv_item" />

       <!-- <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/vieww"
            android:ellipsize="end"
            android:maxWidth="120.0dip"
            android:singleLine="true"
            android:text="腾讯网"
            android:textColor="@color/news_source"
            android:textSize="13.0sp" />-->

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_topic"
            android:layout_below="@+id/vieww" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="2016-01-31 15:34:22"
                android:textColor="#ff999999"
                android:textSize="10.0sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="0.30000007dip"
        android:background="#ffe0e0e0" />

</LinearLayout>